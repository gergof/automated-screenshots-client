{
	"compilerOptions": {
		"target": "es5",
		"lib": ["esnext", "dom"],
		"allowJs": true,
		"rootDir": "src",
		"outDir": "build",
		"resolveJsonModule": true,
		"strict": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"declaration": true,
		"sourceMap": true
	},
	"exclude": ["node_modules", "build", "webpack.config.js"]
}
